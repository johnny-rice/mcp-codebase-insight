# Server settings
HOST=127.0.0.1
PORT=3000
LOG_LEVEL=INFO

# Qdrant settings
QDRANT_URL=http://localhost:6333
COLLECTION_NAME=codebase_analysis
QDRANT_TIMEOUT=30
MAX_RETRIES=3

# Embedding settings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32

# Cache settings
CACHE_ENABLED=true
CACHE_SIZE=1000
CACHE_TTL=3600  # 1 hour

# Documentation settings
DOCS_CACHE_DIR=references
DOCS_REFRESH_INTERVAL=86400  # 24 hours
DOCS_MAX_SIZE=1000000  # 1MB per file
GITIGNORE_PATH=.gitignore

# ADR settings
ADR_DIR=docs/adrs
ADR_TEMPLATE_PATH=docs/templates/adr.md
ADR_INDEX_PATH=docs/adrs/index.md

# Debug settings
DEBUG_LOG_DIR=logs/debug
DEBUG_HISTORY_SIZE=100
DEBUG_RETENTION_DAYS=30

# Analysis settings
ANALYSIS_TIMEOUT=300  # 5 minutes
MAX_FILE_SIZE=10000000  # 10MB
EXCLUDED_PATTERNS=*.pyc,__pycache__,*.git*,*.env*,node_modules,venv,.venv

# Knowledge base settings
KB_STORAGE_DIR=knowledge
KB_BACKUP_INTERVAL=86400  # 24 hours
KB_MAX_PATTERNS=10000

# Security settings (if needed)
# API_KEY=your_api_key_here
# AUTH_ENABLED=false
# AUTH_PROVIDER=none  # none, basic, oauth2

# Metrics settings (if needed)
# METRICS_ENABLED=true
# METRICS_INTERVAL=60  # seconds
# PROMETHEUS_ENABLED=false

# Development settings
# DEBUG=false
# RELOAD=false
# WORKERS=1

# Example external service integrations (if needed)
# GITHUB_TOKEN=your_github_token_here
# JIRA_URL=https://your-jira-instance.com
# JIRA_TOKEN=your_jira_token_here
# SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Example database settings (if needed)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=your_db_name
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password

# Example caching settings (if needed)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password
# REDIS_DB=0

# Example monitoring settings (if needed)
# SENTRY_DSN=your_sentry_dsn
# NEW_RELIC_LICENSE_KEY=your_new_relic_key
# DATADOG_API_KEY=your_datadog_key

# Example cloud settings (if needed)
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_REGION=us-west-2
# GCP_PROJECT_ID=your_gcp_project
# AZURE_CONNECTION_STRING=your_azure_connection_string
